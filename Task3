/*
//swap 2 num
#include <stdio.h>
void swap(int *num1,int *num2);

int main()
{
	int x=100,y=200;

	swap(&x,&y);
	printf("%d %d\n",x,y);
	return 0;
}

void swap(int *num1,int *num2)  //send as a pointer to privent happen dealocated 
{
    int temp;
    temp=*num1;
    *num1=*num2;
    *num2=temp;
}

